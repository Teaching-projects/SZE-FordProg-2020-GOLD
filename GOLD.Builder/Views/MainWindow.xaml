<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GOLD.Builder.Views.MainWindow"
        xmlns:vm="clr-namespace:GOLD.Builder.ViewModels;assembly=GOLD.Builder"
        xmlns:res="clr-namespace:GOLD.Builder.Properties"             
        Icon="/Assets/avalonia-logo.ico"
        Title="{x:Static res:Resources.MainTitle}">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

      <TextBox Name="Grammar_TextBox" AcceptsReturn="True" Text="{Binding Grammar, Mode=OneWayToSource}" TextWrapping="Wrap"/>
      <Button Name="Continue_Button" Content="Continue" Command="{Binding OnContinueClickCommand}" HorizontalAlignment="Right" Grid.Row="1"/>
    </Grid>
</Window>